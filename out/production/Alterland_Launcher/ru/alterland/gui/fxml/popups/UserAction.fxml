<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="popup_container" minHeight="500.0" minWidth="900.0" stylesheets="@../../styles/popups/UserAction.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane fx:id="background" prefHeight="150.0" prefWidth="200.0" styleClass="popup-background" />
      <VBox alignment="BOTTOM_CENTER">
         <children>
            <FlowPane fx:id="more_action_container" alignment="BOTTOM_RIGHT" styleClass="popup-container">
               <children>
                  <VBox fx:id="more_action_list" alignment="CENTER_RIGHT" prefWidth="160.0" styleClass="popup-list">
                     <children>
                        <VBox fx:id="buttons_list_container">
                           <children>
                              <StackPane fx:id="my_account" alignment="BOTTOM_RIGHT" styleClass="popup-item">
                                 <children>
                                    <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" styleClass="text-color" text="Мой аккаунт" textFill="WHITE" />
                                 </children>
                              </StackPane>
                              <StackPane fx:id="settings" alignment="CENTER_RIGHT" styleClass="popup-item">
                                 <children>
                                    <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" styleClass="text-color" text="Настройки" textFill="WHITE" />
                                 </children>
                              </StackPane>
                              <StackPane fx:id="exit" alignment="TOP_RIGHT" styleClass="popup-item">
                                 <children>
                                    <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" styleClass="text-color" text="Выход" textFill="WHITE" />
                                 </children>
                              </StackPane>
                           </children>
                        </VBox>
                     </children>
                     <FlowPane.margin>
                        <Insets />
                     </FlowPane.margin></VBox>
               </children>
               <padding>
                  <Insets left="40.0" right="40.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </FlowPane>
            <FlowPane fx:id="nickname_container" alignment="CENTER_RIGHT" prefHeight="80.0" styleClass="toolbar-container" stylesheets="@../../styles/fragments/toolbar.css" />
         </children>
      </VBox>
   </children>
</StackPane>
