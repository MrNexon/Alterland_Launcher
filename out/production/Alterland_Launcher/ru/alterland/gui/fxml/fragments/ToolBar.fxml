<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>

<StackPane minWidth="800.0" prefHeight="80.0" stylesheets="@../../styles/fragments/toolbar.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Pane prefHeight="200.0" prefWidth="200.0" styleClass="toolbar" />
      <GridPane styleClass="toolbar-container">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <AnchorPane fx:id="selector_wrapper">
               <children>
                  <Pane fx:id="selector_button" prefHeight="35.0" prefWidth="121.0" style="-fx-border-color: white; -fx-border-radius: 2px; -fx-border-width: 1px;" AnchorPane.leftAnchor="3.0" AnchorPane.topAnchor="24.0" />
               </children>
            </AnchorPane>
            <FlowPane alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <HBox>
                     <children>
                        <Label fx:id="servers" onMouseClicked="#menu_item_clicked" onMouseEntered="#button_entered" onMouseExited="#button_exited" text="Серверы" textFill="WHITE">
                           <styleClass>
                              <String fx:value="text-color" />
                              <String fx:value="toolbar-label" />
                           </styleClass>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                           <HBox.margin>
                              <Insets left="3.0" right="3.0" />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="news" onMouseClicked="#menu_item_clicked" onMouseEntered="#button_entered" onMouseExited="#button_exited" opacity="0.6" text="Новости" textFill="WHITE">
                           <styleClass>
                              <String fx:value="text-color" />
                              <String fx:value="toolbar-label" />
                           </styleClass>
                           <HBox.margin>
                              <Insets left="3.0" right="3.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Label>
                        <Label fx:id="shop" onMouseClicked="#menu_item_clicked" onMouseEntered="#button_entered" onMouseExited="#button_exited" opacity="0.6" text="Магазин" textFill="WHITE">
                           <styleClass>
                              <String fx:value="text-color" />
                              <String fx:value="toolbar-label" />
                           </styleClass>
                           <HBox.margin>
                              <Insets left="3.0" right="3.0" />
                           </HBox.margin>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </Label>
                     </children>
                  </HBox>
               </children>
            </FlowPane>
            <FlowPane fx:id="nickname_wrapper" alignment="CENTER_RIGHT" GridPane.columnIndex="1">

            </FlowPane>
         </children>
      </GridPane>
   </children>
</StackPane>
